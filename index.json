{
  "$ref": "#/definitions/project",
  "definitions": {
    "project": {
      "title": "open software project sustainability metadata object",
      "type": "object",
      "properties": {
        "project": {
          "title": "project URI",
          "type": "string",
          "format": "uri"
        },
        "contributors": {
          "title": "array of contributor objects",
          "type": "array",
          "items": {
            "title": "contributor object",
            "anyOf": [
              {
                "$ref": "#/definitions/contributor"
              },
              {
                "$ref": "#/definitions/contributorReference"
              }
            ]
          }
        }
      },
      "required": [
        "project",
        "contributors"
      ]
    },
    "contributorReference": {
      "type": "object",
      "properties": {
        "uri": {
          "title": "url of a contributor resource",
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "uri"
      ]
    },
    "contributor": {
      "type": "object",
      "properties": {
        "name": {
          "title": "contributor name",
          "type": "string",
          "minLength": 1
        },
        "type": {
          "title": "contributor type",
          "enum": [
            "person",
            "business",
            "nonprofit",
            "government"
          ]
        },
        "updated": {
          "title": "last-updated date",
          "type": "string",
          "format": "date"
        },
        "email": {
          "title": "e-mail address",
          "type": "string",
          "format": "email"
        },
        "homepage": {
          "title": "homepage URI",
          "type": "string",
          "format": "uri"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uri": {
                "type": "string",
                "format": "uri"
              },
              "action": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "uri"
            ]
          }
        }
      },
      "required": [
        "name",
        "type",
        "updated"
      ]
    }
  }
}
